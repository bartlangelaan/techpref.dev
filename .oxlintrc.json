{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "nextjs",
    "oxc",
    "import",
    "node",
    "promise"
  ],
  "jsPlugins": ["eslint-plugin-better-tailwindcss"],
  "rules": {
    "better-tailwindcss/enforce-canonical-classes": "error"
  },
  "settings": {
    "better-tailwindcss": {
      "entryPoint": "app/globals.css"
    }
  }
}
